
{% extends 'base.html.twig' %}

{% block title %} les vues avec Twig {% endblock %}

{% block content %}
    <div class="row justify-content-center">
        {% for lesprod in product %}
            <div class="card col-sm-4 px-0" style="width: 18rem;">
                <img class="card-img-top" src="https://via.placeholder.com/150" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{ lesprod['name']}}</h5>
                    <p class="card-text">{{ lesprod['desc'] }}</p>
                    <a href="#" class="btn btn-primary">Suivant</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}